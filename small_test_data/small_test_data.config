/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run salzmanlab/readzs -profile small_test_data

----------------------------------------------------------------------------------------
*/


params {
    runName = "small_test_data"
    input = "samplesheet.csv"
    useChannels = true
    chr_lengths = "refs/chrLength.txt"
    libType = "10X"
    isSICILIAN = true
    isCellranger = false
    metadata = "refs/meta.tsv"
    minCellsPerWindowOnt = 10
    minCtsPerCell = 5

    ontologyCols = "'compartment, tissue'"
    annotation_bed = "refs/hg38.genes.bed"
    gff = "small.gff"
    picard = "/scratch/groups/horence/kaitlin/picard.jar"
}

